{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C Build with math.h",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-Wall",
        "-Wextra",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lm"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "Build com suporte a math.h"
    }
  ]
}
